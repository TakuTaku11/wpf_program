<Window x:Class="wpf_counter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_counter"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="200">
    <Grid>
        <Button x:Name="PlusButton" Content="+" HorizontalAlignment="Left" Margin="25,66,0,0" VerticalAlignment="Top" Width="40" Click="PlusButton_Click"/>
        <Button x:Name="MinusButton" Content="-" HorizontalAlignment="Center" Margin="0,66,0,0" VerticalAlignment="Top" Width="40" Click="MinusButton_Click"/>
        <Button x:Name="ClearButton" Content="Clear" HorizontalAlignment="Left" Margin="135,66,0,0" VerticalAlignment="Top" Width="40" Click="ClearButton_Click"/>
        <TextBlock x:Name="CounterTextBlock" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" Margin="0,31,0,0"/>

    </Grid>
</Window>
