<Window x:Class="wpf_dentaku.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_dentaku"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="662">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="Calculator" HorizontalAlignment="Stretch" Margin="0,0,0,10" TextWrapping="Wrap" VerticalAlignment="Top" Height="60" FontSize="36" IsReadOnly="True"/>

        <UniformGrid Grid.Row="1" Columns="4" Rows="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0">
            <!-- Row 1 -->
            <Button Content="C" FontSize="24" Click="CalculatorClear_Click"/>
            <Button Content="±" FontSize="24" Click="PlusMinusChange_Click"/>
            <Button Content="%" FontSize="24" Click="PercentChange_Click"/>
            <Button Content="/" FontSize="24" Click="Devive_Click"/>
            <!-- Row 2 -->
            <Button Content="7" FontSize="24" Click="ButtonInput7_Click"/>
            <Button Content="8" FontSize="24" Click="ButtonInput8_Click"/>
            <Button Content="9" FontSize="24" Click="ButtonInput9_Click"/>
            <Button Content="*" FontSize="24" Click="Multiply_Click"/>
            <!-- Row 3 -->
            <Button Content="4" FontSize="24" Click="ButtonInput4_Click"/>
            <Button Content="5" FontSize="24" Click="ButtonInput5_Click"/>
            <Button Content="6" FontSize="24" Click="ButtonInput6_Click"/>
            <Button Content="-" FontSize="24" Click="Minus_Click"/>
            <!-- Row 4 -->
            <Button Content="1" FontSize="24" Click="ButtonInput1_Click"/>
            <Button Content="2" FontSize="24" Click="ButtonInput2_Click"/>
            <Button Content="3" FontSize="24" Click="ButtonInput3_Click"/>
            <Button Content="+" FontSize="24" Click="Plus_Click"/>
            <!-- Row 5 -->
            <Button Content="0" FontSize="24" Click="ButtonInput0_Click"/>
            <Button Content="." FontSize="24" Click="Demical_Click"/>
            <Button Content="=" FontSize="24" Click="CalculatorResult_Click"/>
        </UniformGrid>

    </Grid>
</Window>
