<Window x:Class="wpf_sutopwatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_sutopwatch"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="300">
    <Grid>

        <TextBlock x:Name="StopWatchText" HorizontalAlignment="Center" Margin="0,15,0,0" TextWrapping="Wrap" Text="00:00:00.00" VerticalAlignment="Top" FontSize="36" FontFamily="Meiryo" FontWeight="Bold"/>
        <Button x:Name="StartButton" Content="Start" HorizontalAlignment="Left" Margin="50,83,0,0" VerticalAlignment="Top" FontWeight="Bold" Click="StartButton_Click"/>
        <Button x:Name="StopButton" Content="Stop" HorizontalAlignment="Center" Margin="0,83,0,0" VerticalAlignment="Top" FontWeight="Bold" Click="StopButton_Click"/>
        <Button x:Name="resetButton" Content="Reset" HorizontalAlignment="Left" Margin="215,83,0,0" VerticalAlignment="Top" FontWeight="Bold" Click="ResetButton_Click"/>
    </Grid>
</Window>
